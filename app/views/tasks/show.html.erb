<h1><%= @task[:title] %></h1>
<p><%= @task[:details] %></p>
<p>
<% if @task[:completed] == true %>
  <i class="far fa-check-square"> This task is completed</i>
<% else %>
  <i class="far fa-square"> This task is not completed yet</i>
<% end %>
</p>
<p><i class="fas fa-undo-alt"></i> <%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit this task", edit_path %></p>
<p><%= link_to "Delete", task_path(@task.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
